= render "items/header"
.mypage
 .bread
    - breadcrumb :informations
    = breadcrumbs separator: "&rsaquo;"
  .mypage__inner
    = render "mypages/mypage-sidebar"
    .mypage__inner__main
      .mypage__inner__main__top
        %p 本人情報の登録
      .mypage__inner__main__contents
        .head-info
          .head-info__left
            %p お客さまの本人情報をご登録ください。<br>登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          .head-info__right
            = link_to "本人確認書類のアップロードについて"
            = icon("fas", "chevron-right", class: "icon")
        =form_with url: "#" do |f|
          .form-group
            お名前
          = current_user.name_family
          = current_user.name_first
          .form-group
            お名前カナ
          = current_user.kana_family
          = current_user.kana_first
          .form-group
            生年月日
          = current_user.birthday
          .form-group
            郵便番号
            %span 任意
            .form-group__text
              = f.text_field :content, class: "form-group__area", placeholder: "例)1234567"
          .form-group
            都道府県
            %span 任意
            .form-group__text
              %select{name: "prefecture"}
                %option{selected: "selected", value: ""} --
                %option{value: "1"} 北海道
                %option{value: "2"} 青森県
                %option{value: "3"} 岩手県
                %option{value: "4"} 宮城県
