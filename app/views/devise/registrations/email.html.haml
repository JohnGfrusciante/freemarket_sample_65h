%h2 会員情報入力
= form_for(@user, url: tel_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :"ニックネーム 必須"
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :"メールアドレス 必須"
    %br/
    = f.email_field :email, autocomplete: "email"
  .field
    = f.label :"パスワード 必須"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"


  .field
    = f.label :"お名前(全角) 必須"
    %br/
    = f.text_field :name_family, autocomplete: "name_family"
    = f.text_field :name_first, autocomplete: "name_first"

  .field
    = f.label :"お名前カナ(全角) 必須"
    %br/
    = f.text_field :kana_family, autocomplete: "kana_family"
    = f.text_field :kana_first, autocomplete: "kana_first"

  .field
    = f.label :"生年月日 必須"
    %br/
    != sprintf(f.date_select(:birthday, prefix:'user', with_css_classes:'XXXXX', prompt:"--", use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'


  .actions
    = f.submit "Next"
