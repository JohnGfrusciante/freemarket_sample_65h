.addressPage
  .addressPage__body
    .addressPage__body__header
      %h1
        = link_to root_path do
          = image_tag ("/fmarket_logo_red.svg"),size: "180x45"
      %ol.addressPage__body__header__nav
        %li.addressPage__body__header__nav--email
          会員情報
          .addressPage__body__header__nav--email--point
          .addressPage__body__header__nav--email--line

        %li.addressPage__body__header__nav--tel
          電話番号認証
          .addressPage__body__header__nav--tel--point
          .addressPage__body__header__nav--tel--line

        %li.addressPage__body__header__nav--address
          お届け先住所入力
          .addressPage__body__header__nav--address--point
          .addressPage__body__header__nav--address--line

        %li.addressPage__body__header__nav--credit
          支払い方法
          .addressPage__body__header__nav--credit--point
          .addressPage__body__header__nav--credit--line

        %li.addressPage__body__header__nav--done
          完了
          .addressPage__body__header__nav--done--point


    .addressPage__body__main
      .addressPage__body__main__title
        発送元・お届け先住所入力

      .addressPage__body__main__formArea
        = form_for @address,url: credit_path, method: :post do |f|
          = render "devise/shared/error_messages", resource: @address

          .addressPage__body__main__formArea__name
            .addressPage__body__main__formArea__name__title
              お名前(全角)
            .addressPage__body__main__formArea__name__required
              必須
          .addressPage__body__main__formArea__name__two-form
            = f.text_field :name_family, autocomplete: "name_family", class: 'form-left', placeholder: "例)山田"
            = f.text_field :name_first, autocomplete: "name_first", class: 'form-right', placeholder: "例)彩"

          .addressPage__body__main__formArea__name-kana
            .addressPage__body__main__formArea__name-kana__title
              お名前カナ(全角)
            .addressPage__body__main__formArea__name-kana__required
              必須
          .addressPage__body__main__formArea__name__two-form
            = f.text_field :kana_family, autocomplete: "kana_family", class: 'form-left', placeholder: "例)ヤマダ"
            = f.text_field :kana_first, autocomplete: "kana_first", class: 'form-right', placeholder: "例)アヤ"

          .addressPage__body__main__formArea__postal-code
            .addressPage__body__main__formArea__postal-code__title
              郵便番号
            .addressPage__body__main__formArea__postal-code__required
              必須
          = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "例)123-4567"

          .addressPage__body__main__formArea__prefecture
            .addressPage__body__main__formArea__prefecture__title
              都道府県
            .addressPage__body__main__formArea__prefecture__required
              必須
          .addressPage__body__main__formArea__select-form
            = f.select :prefecture, Address.prefectures.keys, {promt: "---"}

          .addressPage__body__main__formArea__municipality
            .addressPage__body__main__formArea__municipality__title
              市区町村
            .addressPage__body__main__formArea__municipality__required
              必須
          = f.text_field :municipality, autofocus: true, autocomplete: "municipality", placeholder: "例)横浜市緑区"

          .addressPage__body__main__formArea__house-number
            .addressPage__body__main__formArea__house-number__title
              番地
            .addressPage__body__main__formArea__house-number__required
              必須
          = f.text_field :house_number, autofocus: true, autocomplete: "house_number", placeholder: "例)青山1-1-1"

          .addressPage__body__main__formArea__building
            .addressPage__body__main__formArea__building__title
              建物名
            .addressPage__body__main__formArea__building__required
              任意
          = f.text_field :building, autofocus: true, autocomplete: "building", placeholder: "例)柳ビル103"

          .addressPage__body__main__formArea__tel
            .addressPage__body__main__formArea__tel__title
              電話番号
            .addressPage__body__main__formArea__tel__required
              任意
          = f.text_field :tel, autofocus: true, autocomplete: "tel", placeholder: "例)09012345678"

          .addressPage__body__main__formArea__submit
            = f.submit "次へ進む"


    = render 'regist_footer'