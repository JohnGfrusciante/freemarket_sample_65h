%h2 発送元・お届け先住所入力
= form_for @address,url: credit_path, method: :post do |f|
  = render "devise/shared/error_messages", resource: @address

  .field
    = f.label :"お名前(全角) 必須"
    %br/
    = f.text_field :name_family, autocomplete: "name_family"
    = f.text_field :name_first, autocomplete: "name_first"

  .field
    = f.label :"お名前カナ(全角) 必須"
    %br/
    = f.text_field :kana_family, autocomplete: "kana_family"
    = f.text_field :kana_first, autocomplete: "kana_first"

  .field
    = f.label :"郵便番号 必須"
    %br/
    = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"

  .field
    = f.label :"都道府県 必須"
    %br/
    = f.select :prefecture, ['1', '2', '3']

  .field
    = f.label :"市区町村 必須"
    %br/
    = f.text_field :municipality, autofocus: true, autocomplete: "municipality"

  .field
    = f.label :"番地 必須"
    %br/
    = f.text_field :house_number, autofocus: true, autocomplete: "house_number"

  .field
    = f.label :"建物名 任意"
    %br/
    = f.text_field :building, autofocus: true, autocomplete: "building"

  .field
    = f.label :"電話番号 任意"
    %br/
    = f.text_field :tel, autofocus: true, autocomplete: "tel"

  .actions
    = f.submit "Next"
