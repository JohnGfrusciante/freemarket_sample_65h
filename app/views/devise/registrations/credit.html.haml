%h2 支払い方法
= form_for @user,url: done_path, method: :post do |f|
  = render "devise/shared/error_messages", resource: @user

  .field
    = f.label :"カード番号"
    %br/
    %input.text_field

  .field
    = f.label :"有効期限"
    %br/
    = f.select :presence, ['01', '02', '03', '04', '05', '06', '07', '08', '09', '10', '11', '12']
    月
    = f.select :presence, ['20', '19', '18']
    年

  .field
    = f.label :"セキュリティコード"
    %br/
    %input.text_field

  .actions
    = f.submit "Sign up"
